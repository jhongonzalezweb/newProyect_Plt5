
<%- include("template/cabecera", {tituloWeb: 'Editar Cliente' }) %>

    <div class="container">

        <h2>Editar Cliente</h2>

        <form action="editarCliente" class="my-2" method="POST">
            
            <input type="hidden" value="<%= id %>" name="id">
            
            <input type="text" value="<%= nombre %>" class="form-control my2" name="nombre">
            <br>
            <input type="text" value="<%= apellido %>" class="form-control my2" name="apellido">

            <br>

            <button type="submit" class="btn btn-dark">Modificar Cliente</button>
            
        </form>
        
    </div>

    <%- include("template/footer") %>